# =============================================================================
# MER System Environment Configuration
# =============================================================================
# 复制此文件为 .env 并根据实际环境修改配置值

# -----------------------------------------------------------------------------
# 数据库配置
# -----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=123456
MYSQL_DATABASE=mer_system
MYSQL_USER=mer_user
MYSQL_PASSWORD=mer_pass

# 数据库连接配置（应用使用）
DB_HOST=mysql
DB_PORT=3306
DB_USER=mer_user
DB_PASSWORD=mer_pass
DB_NAME=mer_system
DB_CHARSET=utf8mb4
DB_TIMEZONE=Local
DB_DEBUG=true

# -----------------------------------------------------------------------------
# Redis 配置
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# JWT 配置
# -----------------------------------------------------------------------------
JWT_SECRET=mer-system-jwt-secret-change-in-production
JWT_EXPIRE_HOURS=24

# -----------------------------------------------------------------------------
# 服务配置
# -----------------------------------------------------------------------------
# API 网关
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8080

# 用户服务
USER_SERVICE_HOST=0.0.0.0
USER_SERVICE_PORT=8080

# 租户服务
TENANT_SERVICE_HOST=0.0.0.0
TENANT_SERVICE_PORT=8080

# -----------------------------------------------------------------------------
# 前端配置
# -----------------------------------------------------------------------------
# 前端 API 基础URL
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WS_URL=ws://localhost:8080/ws

# 前端开发服务器
VITE_HOST=0.0.0.0
VITE_PORT=5173

# -----------------------------------------------------------------------------
# 应用配置
# -----------------------------------------------------------------------------
# 运行环境 (development, staging, production)
GO_ENV=development
NODE_ENV=development

# 应用名称
APP_NAME=MER System
APP_VERSION=1.0.0

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=debug

# 是否启用调试模式
DEBUG=true

# -----------------------------------------------------------------------------
# 安全配置
# -----------------------------------------------------------------------------
# CORS 允许的域名（生产环境需要配置）
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# 会话密钥（生产环境必须更改）
SESSION_SECRET=mer-system-session-secret-change-in-production

# 加密密钥（生产环境必须更改）
ENCRYPTION_KEY=mer-system-encryption-key-32-chars

# -----------------------------------------------------------------------------
# 文件存储配置
# -----------------------------------------------------------------------------
# 上传文件存储路径
UPLOAD_PATH=./uploads
UPLOAD_MAX_SIZE=10485760  # 10MB

# 静态文件服务路径
STATIC_PATH=./static

# -----------------------------------------------------------------------------
# 邮件配置（可选）
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=MER System <noreply@example.com>

# -----------------------------------------------------------------------------
# 监控配置（可选）
# -----------------------------------------------------------------------------
# 是否启用性能监控
ENABLE_METRICS=true

# 监控数据保留天数
METRICS_RETENTION_DAYS=30

# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=30

# -----------------------------------------------------------------------------
# 缓存配置
# -----------------------------------------------------------------------------
# 缓存默认过期时间（分钟）
CACHE_DEFAULT_TTL=60

# 会话缓存过期时间（分钟）
SESSION_CACHE_TTL=1440  # 24小时

# -----------------------------------------------------------------------------
# 限流配置
# -----------------------------------------------------------------------------
# API 请求限制（每分钟）
RATE_LIMIT_PER_MINUTE=100

# 登录失败限制（每小时）
LOGIN_FAILURE_LIMIT=5

# -----------------------------------------------------------------------------
# 开发环境特殊配置
# -----------------------------------------------------------------------------
# 是否自动运行数据库迁移
AUTO_MIGRATE=true

# 是否启用开发工具
ENABLE_DEV_TOOLS=true

# 是否启用 SQL 查询日志
ENABLE_SQL_LOG=true

# 是否启用 API 文档
ENABLE_SWAGGER=true

# -----------------------------------------------------------------------------
# Docker 特殊配置
# -----------------------------------------------------------------------------
# Docker 网络
DOCKER_NETWORK=mer_network

# Docker 卷
MYSQL_DATA_VOLUME=mysql_data
REDIS_DATA_VOLUME=redis_data

# 健康检查配置
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_INTERVAL=30s